FROM ghcr.io/bioconductor/bioconductor:devel
RUN sudo apt-get update && sudo apt-get -y install apt-file && echo ahl27/CompGenomicsBioc2022 | tr ',' '\n' > /tmp/pkglist && cat /tmp/pkglist | xargs -i Rscript -e "if (!require('rspm')) { install.packages('rspm'); rspm::enable(); }; if(BiocManager::install(c('{}'), dependencies = c('Depends', 'Imports', 'LinkingTo', 'Suggests')) %in% rownames(installed.packages())) q(status = 0) else q(status = 1)"
RUN sudo apt-get update && sudo apt-get -y install apt-file &&  cd /home/rstudio && echo "vignettes/*" | tr ',' '\n' > vignlist && git clone https://github.com/ahl27/CompGenomicsBioc2022 && cp -r CompGenomicsBioc2022 tmpsource && cd tmpsource && curl -o install.sh https://raw.githubusercontent.com/Bioconductor/workshop-contributions/main/.github/scripts/install_missing.sh && cat ../vignlist | xargs -i bash install.sh {} && cd .. && rm -rf vignlist tmpsource/
